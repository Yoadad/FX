@model XF.Models.UsersViewModel

@{
    ViewBag.Title = "Users";
}
<br />
<h2>
    Users
    <span class="xf-btn-right">
        <a href="/Account/Register" class="btn btn-primary">Register New User</a>
    </span>
</h2>
<br />

<table class="table table-striped table-bordered">
    <tr>
        <th>
            Email
        </th>
        <th>
            First Name
        </th>
        <th>
            Middle Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Roles
        </th>
        <th>
            Comission
        </th>
    </tr>

    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @foreach (var role in Model.Roles)
                {
                    <div class="checkbox">
                        <label>
                            <input class="xf-chk-role"
                                   data-userid="@item.Id"
                                   data-roleid="@role.Id"
                                   type="checkbox"
                                   @(item.AspNetRoles.Any(r => r.Id == role.Id) ? "checked" : string.Empty) />
                            @role.Name
                        </label>
                    </div>
                }

            </td>
            <td style="max-width:100px;">
                <a href="javascript:;" 
                   class="xf-lnk-comission"                                    data-userid="@item.Id"
                   data-userid="@item.Id">
                    @Html.DisplayFor(modelItem => item.Comission)
                </a>
            </td>
        </tr>
    }

</table>


@section Scripts
{
    @Scripts.Render("~/Scripts/UserRoles/UserRoles.js?v=1.1")

}