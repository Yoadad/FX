    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Client
        </th>
        <th>
            Status
        </th>
        <th>
            Payment Type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
