@using Microsoft.AspNet.Identity
<!DOCTYPE html lang="eu">
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ximena's Furniture </title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/boostrap")
    @Styles.Render("~/Content/fontawesome")
    @Styles.Render("~/Content/kendo")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/Images/Ximenas_transparent.png?v=2" width="89" style="cursor:pointer;" onclick="javascript: window.location ='/Home'" />
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluent body-content xf-container">
        <div class="row">
            <div class="col-md-10 xf-main-container">
                @RenderBody()
            </div>
            @if (Request.IsAuthenticated)
            {
                <div class="col-md-2">
                    <br />
                    <div>
                        @Html.Action("Edition", "Notes")
                    </div>
                    <hr />
                    <div>
                        <h5><strong>Application Info</strong></h5>
                        <div id="info"></div>
                    </div>
                </div>
            }
        </div>

    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - Ximena's Furniture</p>
    </footer>

    @Html.Partial("~/Views/Templates/Info.cshtml")
    @Html.Partial("~/Views/Templates/Alert.cshtml")
    @Html.Partial("~/Views/Templates/Confirm.cshtml")
    @Html.Partial("~/Views/Templates/Prompt.cshtml")
    @Html.Partial("~/Views/Templates/Note.cshtml")



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/Scripts/main.js?v=1")
    @if (Request.IsAuthenticated)
    {
        @Scripts.Render("~/Scripts/jquery.signalR-2.2.1.min.js")
        @Scripts.Render("~/signalr/js")
        @Scripts.Render("~/Scripts/Notes/notes.js")
    }
    @RenderSection("templates", required: false)
    @RenderSection("scripts", required: false)

</body>
</html>
