@model XF.Models.ReportSalesModel
@{
    ViewBag.Title = "Sales Report";
    Layout = null;
}

@if (ViewBag.HasStyles)
{
    Layout = "~/Views/Shared/_PrintLayout.cshtml";
}
<h2 class="text-center">Sales Report</h2>
<br />
<div class="text-right">@ViewBag.StartDate &nbsp;to&nbsp;@ViewBag.EndDate</div>
<table id="report" class="table table-striped table-bordered">
    <tbody>
        <tr>
            <td>
                <strong>
                    Date
                </strong>
            </td>
            @foreach (var item in Model.Items)
            {
                <td class="text-center">
                    <h5>
                        <strong>
                            @item.Date.ToString("dddd")
                        </strong>
                        <br />
                        <small>
                            @item.Date.ToShortDateString()
                        </small>
                    </h5>
                </td>
            }
        </tr>
        <tr>
            <td>
                <strong>
                    Cash
                </strong>
            </td>
            @foreach (var item in Model.Items)
            {
                <td class="text-right">
                    <em>
                        @string.Format("{0:c}", item.Amounts.First())
                    </em>
                </td>
            }
        </tr>
        <tr>
            <td>
                <strong>
                    CC
                </strong>
            </td>
            @foreach (var item in Model.Items)
            {
                <td class="text-right">
                    <em>
                        @string.Format("{0:c}", item.Amounts.Skip(1).First())
                    </em>
                </td>
            }
        </tr>
        <tr>
            <td>
                <strong>
                    Debit
                </strong>
            </td>
            @foreach (var item in Model.Items)
            {
                <td class="text-right">
                    <em>
                        @string.Format("{0:c}", item.Amounts.Skip(2).First())
                    </em>
                </td>
            }
        </tr>
        <tr>
            <td>
                <strong>
                    Check
                </strong>
            </td>
            @foreach (var item in Model.Items)
            {
                <td class="text-right">
                    <em>
                        @string.Format("{0:c}", item.Amounts.Skip(3).First())
                    </em>
                </td>
            }
        </tr>
        @{ var index = 4;}
        @foreach (var finance in Model.Finances)
        {
            <tr>
                <td>
                    <strong>
                        @finance.Name.Replace("Finance-", "")
                    </strong>
                </td>
                
                @foreach (var item in Model.Items)
                {
                    <td class="text-right">
                        <em>
                            @string.Format("{0:c}", item.Amounts.Skip(index).First())
                        </em>
                    </td>
                }
                @{ index++;}
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>
