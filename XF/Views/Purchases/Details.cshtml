@model XF.Entities.PurchaseOrder
<br />
<h1>
    Purchase Order <small>(@Model.Id)</small>
    @*<a href="javascript:;" id="btnSendEmail" class="btn btn-primary" style="float:right; margin:8px;">Email&nbsp;&nbsp;<span class="fa fa-mail-forward"></span></a>&nbsp;*@
    <a href="/Purchases/List" class="btn btn-primary" style="float:right; margin:8px;">Return to List</a>
    &nbsp;
    <a href="javascript:window.open('/Purchases/Print/@Model.Id', '_blank')" class="btn btn-primary" style="float:right; margin:8px;">Print&nbsp;&nbsp;<span class="fa fa-print"></span></a>
    
    
</h1>
<hr />
<input type="hidden" id="hfOrderId" value="@Model.Id" />
<div class="row">
    <div class="col-md-6">
        <h3>
            Provider:
            <small>@Model.PurchaseOrderDetails.First().Product.Provider.BusinessName</small>
        </h3>
    </div>
    <div class="col-md-6">
        <h3 class="text-right">
            &nbsp;&nbsp;<small>@Model.Date.ToLongDateString()</small>
        </h3>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered" id="orderTable">
            <thead>
                <tr>
                    <th class="text-center">Item</th>
                    <th class="text-center">Code</th>
                    <th class="text-center">Quantity</th>
                    <th class="text-center">Unit Price</th>
                    <th class="text-center">Total</th>
                </tr>
            </thead>
            <tbody>
                @{ var index = 0;}
                @foreach (var detail in Model.PurchaseOrderDetails)
                {
                    <tr class="item item-@index" data-detailid="@detail.Id">
                        <td>
                            @detail.Product.Name
                        </td>
                        <td>
                            @detail.Product.Code
                        </td>
                        <td class="text-right">
                            @detail.Quantity
                        </td>
                        <td class="text-right">
                            <em class="lbl-price" data-value="@detail.UnitPrice">@string.Format("{0:c}", detail.UnitPrice)</em>
                        </td>

                        <td class="text-right">
                            <em class="lbl-total" data-value="@detail.UnitPrice*detail.Quantity">
                                @string.Format("{0:C}", detail.UnitPrice * detail.Quantity)
                            </em>
                        </td>

                        @{index++;}
                    </tr>

                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-right">
                        <strong>TOTAL</strong>
                    </td>
                    <td  class="text-right">
                        <strong>
                            @string.Format("{0:C}", Model.PurchaseOrderDetails.Sum(pod => pod.UnitPrice * pod.Quantity))
                        </strong>
                     </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
