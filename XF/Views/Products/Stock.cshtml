
@model XF.Models.ProductStockViewModel
<div class="row">
    <div class="col-md-6">
        <h3>Product Stock</h3>
    </div>
    <div class="col-md-6 text-right">
        <h3>
            <small>
                <a href="/Products">Return Products List</a>
            </small>
        </h3>
    </div>
</div>
<hr />
<div class="form-horizontal">

    <input type="hidden" value="@Model.Location.Id" id="hfLocationId" />
    <input type="hidden" value="@Model.Product.Id" id="hfProductId" />
    <div class="form-group">
        <label class="control-label col-md-2">Code</label>
        <div class="col-md-10">
            <input type="text" id="txtProduct" readonly value="@Model.Product.Code" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Name</label>
        <div class="col-md-10">
            <input type="text" id="txtProduct" readonly value="@Model.Product.Name" class="form-control" />
        </div>
    </div>
    @foreach (var item in Model.Locations)
    {
    <div class="form-group stock">
            <label class="control-label col-md-2">@item.Location.Name</label>
            <div class="col-md-10">
                <input type="number" min="1" class="form-control location-stock" data-locationid="@item.Location.Id" value="@item.Stock" />
            </div>
    </div>
    }
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <input type="button" id="btnUpdate" value="Update Stock" class="form-control" />
        </div>
    </div>

</div>
@section Scripts{

    @Scripts.Render("~/Scripts/Products/ProductStock.js?v=1")
}
