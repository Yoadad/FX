
@model XF.Models.ProductItemViewMOdel

<h2>Configure</h2>
<div class="form-horizontal">
    <h4>Stock</h4>
    <hr />
    
    <input type="hidden" value="@Model.Product.Id" id="hfProductId" />
    <div class="form-group">
        <label class="control-label col-md-2">Product</label>
        <div class="col-md-10">
            <input type="text" id="txtProduct" readonly value="@Model.Product.Name" class="form-control typeahead" placeholder="Enter product name or code" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Stock</label>
        <div class="col-md-10">
            <input type="number" min="1" id="txtStock" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <input type="button" id="btnUpdate" value="Set Stock" class="form-control" />
        </div>
    </div>

</div>
    @section Scripts{
    
       @Scripts.Render("~/Scripts/ProductStock/ProductStock.js")
    }