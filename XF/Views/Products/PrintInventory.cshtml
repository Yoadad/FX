@model IEnumerable<XF.Entities.Product>
@{
    ViewBag.Title = "Inventory";
    Layout = "~/Views/Shared/_PrintLayout.cshtml";
}



<h2 class="text-center">
    Inventory
    <br />
    <small class="text-right">@DateTime.Now.ToLongDateString()</small>
    <br />
</h2>
<table id="report" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">Code </th>
            <th class="text-center">Name</th>
            <th class="text-center">Sell Price</th>
            <th class="text-center">Purchase Price</th>
            <th class="text-center">Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Code
                </td>
                <td>
                    @item.Name
                </td>
                <td class="text-right">
                    @string.Format("{0:C}", item.SellPrice)
                </td>
                <td class="text-right">
                    @string.Format("{0:C}", item.PurchasePrice)
                </td>
                <td class="text-right">
                    @string.Format("{0}", item.Stocks.Sum(s => s.StockQuantity))
                </td>
            </tr>
        }
    </tbody>
</table>
