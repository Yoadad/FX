@model XF.Models.SalesModel
<h2>Sales</h2>
<hr />


<div class="row">
    <div class="col-md-6">
        <label>Client</label>
        <select class="form-control" id="cmbClient">
            @foreach (var item in Model.Clients)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="col-md-6">
        <label>Date</label>
        <input type="date" id="txtDate" class="form-control" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
    </div>
    <div class="col-md-12">
        <div id="grid"></div>
    </div>
</div>


<script type="text/html" id="productsTemplate">

    <select class="form-control cmb-product">
        @foreach (var item in Model.Products)
            {
            <option value="@item.Id">@item.Name [@item.Code]</option>
        }
    </select>

</script>

@section scripts{
    @Scripts.Render("~/Scripts/Sales/SalesPoint.js")    
}
