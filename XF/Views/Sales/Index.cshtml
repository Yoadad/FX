@model XF.Models.SalesModel
<h2>Sales</h2>
<hr />


<div class="row">
    <div class="col-md-6">
        <label>Client</label>
        <select class="form-control" id="cmbClient">
            @foreach (var item in Model.Clients)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="col-md-6">
        <label>Date</label>
        <input type="date" id="txtDate" class="form-control" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
    </div>
    <div class="col-md-12">
        <table class="table table-striped" id="invoiceTable">
            <thead>
                
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="text" class="form-control" id="txtProduct" />
                    </td>
                    <td>
                        <input type="number" min="1" class="form-control" id="txtUnits" />
                    </td>
                    <td>
                        <label id="lblPrice"></label>
                    </td>
                    <td>
                        <label id="lblTotal"></label>
                    </td>
                    <td>
                        <input type="button" value="Add" id="btnAdd"/>
                    </td>
                </tr>
            </tbody>
            @*<tfooter>
                <tr>
                    <td></td>
