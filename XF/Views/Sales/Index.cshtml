                    <td></td>
                    <td>Discount</td>
                    <td>$10.00</td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>TOTAL</td>
                    <td>523.55</td>
                </tr>

            </tfooter>*@
        </table>

        <div id="grid">

        </div>
    </div>
</div>


<script type="text/html" id="productsTemplate">

    <select class="form-control cmb-product">
        @foreach (var item in Model.Products)
            {
            <option value="@item.Id">@item.Name [@item.Code]</option>
        }
    </select>

</script>

@section scripts{
    @Scripts.Render("~/Scripts/Invoices/SalesPoint.js")    
    @Scripts.Render("~/Scripts/Sales/SalesPoint.js")    
}
