@model IEnumerable<XF.Entities.Provider>

@{
    ViewBag.Title = "Providers";
}

<h2>Providers
    
    </h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-md-12" style="overflow:auto;max-height:500px;">
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BusinessName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkingHours)
                </th>
                <th>
                    Is Active
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BusinessName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        Working Hours
                    </td>
                    <td>
                        <input type="checkbox" disabled @(item.IsActive?"checked":"") />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) <br />
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) <br />
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>
                </tr>
}

        </table>
    </div>
</div>