            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section scripts
{
<script>

    $('#chkIsActive').on('click', function () {
        $('#hfIsActive').val($(this).is(':checked') ? 'True':'False');
    });
</script>
}